      }

      // Send clock-out request
      const formData = new FormData();
      formData.append("selfie", selfieFile);
      formData.append("lat", lat.toString());
      formData.append("lng", lng.toString());
      
      const res = await fetch("/api/attendance/clock-out", {
        method: "POST",
        headers: {
          Authorization: `Bearer ${localStorage.getItem("token")}`,
        },
        body: formData,
      });

      if (res.ok) {
        alert("Clock out successful!");
        fetchAttendance(user.id);
      } else {
          // Show location permission request message
          console.log('Requesting location permission for clock-in...');
        const data = await res.json();
        alert(data.error || "Clock out failed");
      }
    } catch (error) {
      console.error('Clock-out error:', error);
      if (error.name === 'NotAllowedError') {
        alert('Camera access is required. Please allow camera access to continue.');
      } else {
          // Show location permission request message
          console.log('Requesting location permission for clock-in...');
        alert("Clock out error: " + error.message);
      }
    }
  };

  if (loading) {
    return (
      <div className="flex h-screen items-center justify-center">
        <div className="text-xl">Loading...</div>
      </div>
    );
  }

  return (
    <div className="min-h-screen bg-gray-100 p-4">
      <div className="max-w-4xl mx-auto">
        <div className="bg-white rounded-lg shadow p-6">
          <div className="flex justify-between items-center mb-6">
            <h1 className="text-2xl font-bold">Dashboard</h1>
            <div className="flex items-center space-x-4">
              <span className="text-lg">Welcome, {user?.role === "User" ? user.id : "Admin"}</span>
              <div className={`px-3 py-1 rounded-full text-sm ${
                clockedIn ? "bg-green-100 text-green-800" : "bg-gray-100 text-gray-800"
              }`}>
                {clockedIn ? "Clocked In" : "Not Clocked In"}
              </div>
            </div>
          </div>

          {/* Clock In/Out Buttons */}
          <div className="flex space-x-4 mb-6">
            <button
              onClick={captureSelfieAndClockIn}
              disabled={clockedIn}
              className={`px-6 py-3 rounded-lg font-medium ${
                clockedIn 
                  ? "bg-gray-300 cursor-not-allowed" 
                  : "bg-blue-600 hover:bg-blue-700 text-white"
